<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div>
      <h1 style="text-align: center;">Detail Hero</h1>
    </div>
    {{#each data}}
    <div class="card mb-3" style="max-width: 540px; margin:auto">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/uploads/{{this.photo}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">Path: {{this.name_type}}</p>
      </div>
      <div class="d-flex w-100 mt-5" style="justify-content:end;">
        <a href="/editheroes/{{this.id}}" class="btn btn-primary">Edit Heroes</a>
      </div>
    </div>
  </div>
</div>
{{/each}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>